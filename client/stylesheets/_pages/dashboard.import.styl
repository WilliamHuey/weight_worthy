/******************************
  Left Sidebar
*******************************/

#dashboard-ul
  padding-left 0em
  li
    a
      display block
      padding 0.8em 0em 0.8em 2em
      &:hover
        background-color teal
        text-decoration none
        color white
        font-weight 900

/******************************
  Right Sidebar
*******************************/

#dashboard-content-bottom
  padding 1em  

#dashboard-heading  
  h1
    font-size 150%
    margin 0.2em 0em

.padding-left
  padding-left 2em

.padding-top-bottom     
  padding-top 1em
  padding-bottom 1em


/******************************
******************************
  Dashboard Right
******************************  
*******************************/


/******************************
  Profile
*******************************/

form.profile
  padding-right 2em
  padding-top 1.5em
  .form-group
    padding-bottom 1.5em
  label
    min-width 80px


/******************************
  Workouts
*******************************/

#chart
  height 350px
  margin 1em 0.5em
  background-color #fafafa
  border 1px solid #ccc
  svg
   width 100%
   height 100%

.tooltip
  position absolute
  text-align center  
  padding 1em
  font 100% sans-serif
  background orange
  border 0px
  border-radius 8px
  pointer-events none   