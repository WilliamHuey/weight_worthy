/******************************
  Left Sidebar
*******************************/

#dashboard-ul
  padding-left 0em
  li
    a
      display block
      padding-left 2em

/******************************
  Dashboard Right
*******************************/

#dashboard-content-bottom
  padding 1em  

#dashboard-heading  
  h1
    font-size 150%
    margin 0.2em 0em

#chart
  height 350px
  margin 1em 0.5em
  background-color #fafafa
  border 1px solid #ccc
  svg
   width 100%
   height 100%

.tooltip
  position absolute
  text-align center  
  padding 1em
  font 100% sans-serif
  background orange
  border 0px
  border-radius 8px
  pointer-events none   